{
  "name": "slugizoid",
  "version": "1.1.1",
  "description": "A package for managing REST API slugs",
  "scripts": {
    "commit": "git-cz",
    "build": "webpack -p && git add index.js",
    "test": "jest",
    "test:ci": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "precommit": "lint-staged",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "main": "index.js",
  "repository": "git@github.com:mb3online/slugizoid.git",
  "author": "Eric Adamski <er.adamski@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "all-contributors-cli": "^4.11.2",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.3.4",
    "commitizen": "^2.10.1",
    "condition-circle": "^1.6.0",
    "cz-conventional-changelog": "^2.1.0",
    "cz-emoji": "^1.3.1",
    "flow-bin": "^0.57.3",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "prettier": "^1.19.1",
    "regenerator-runtime": "^0.11.1",
    "semantic-release": "^8.2.0",
    "webpack": "^3.12.0"
  },
  "jest": {
    "rootDir": "./",
    "testMatch": [
      "**/__tests__/**/*.spec.js?(x)"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "config": {
    "cz-emoji": {}
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write --config ./.prettierrc.json --config-precedence prefer-file",
      "yarn build",
      "git add"
    ]
  },
  "dependencies": {
    "pluralize": "^7.0.0"
  }
}
